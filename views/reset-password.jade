extends layout

block content

	if message
		p.pull-center.message #{message}
	if error
		p.pull-center.error #{error}
	#main.pure-g-r
		.pure-u-1-2.pull-center
			h1.sans #{title}
		.pure-u-1-4
			form(action="/reset-password", method="post")
				.pure-u-1-2
					#category
						input(type="password", data-provide="typeahead", name="password", placeholder="New Password")
				.pure-u-1-2
					input(type="password", name="password_conf", placeholder="Password confirmation")
				#submit
				input(type="submit", value="Update")