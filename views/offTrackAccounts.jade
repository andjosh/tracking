extends layout

block content

	if message
		p.pull-center.message #{message}
	if error
		p.pull-center.error #{error}

	#main.pure-g-r
		.pure-u-1-3
		.pure-u-1-3.pull-center
			h1.sans Accounts
		.pure-u-1-3
		for a in accounts
			.pure-u-1-3.pull-center
				p
					a(href="/off-track/accounts/#{a._id}") #{a.email}